<div class="card-list-containar py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h4>プロフィール編集</h4>
          <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <p><%= f.label :ユーザー名 %></p>
            <p><%= f.text_field :name,class: "form-control name" %></p>
          </div>
          <div class="form-group">
            <p><%= f.label :プロフィール画像%></p>
            <p><%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: "no_image.jpg"%></p>
            <p><%= f.attachment_field :profile_image, class: "form-control-file user_image" %></p>
          </div>
          <div class="form-group">
            <p><%= f.label :自己紹介文 %></p>
            <p><%= f.text_area :introduction, class: "form-control introduction" %></p>
          </div>
          <div class="form-group">
            <%= f.submit '変更を保存',class: "btn btn-secondary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>